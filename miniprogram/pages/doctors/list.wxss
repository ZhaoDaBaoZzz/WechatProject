.container {
  padding: 16px;
}

/* 搜索栏样式 */
.search-bar {
  margin-bottom: 16px;
}

.search-input {
  display: flex;
  align-items: center;
  margin-bottom: 0;
}

.search-icon {
  margin-right: 8px;
}

/* 筛选区域样式 */
.filter-section {
  margin-bottom: 16px;
}

.filter-scroll {
  white-space: nowrap;
  padding-bottom: 8px;
}

.filter-group {
  display: inline-block;
  margin-right: 24px;
}

.filter-title {
  font-size: 14px;
  font-weight: 500;
  margin-bottom: 8px;
  color: var(--apple-gray1);
}

.filter-options {
  display: flex;
  flex-wrap: nowrap;
}

.filter-option {
  padding: 6px 12px;
  margin-right: 8px;
  border-radius: 16px;
  font-size: 14px;
  background-color: var(--apple-gray5);
  color: var(--apple-gray1);
  transition: all 0.2s;
}

.filter-option.active {
  background-color: var(--apple-primary);
  color: var(--apple-white);
}

/* 医生列表样式 */
.doctor-list {
  margin-bottom: 16px;
}

.doctor-item {
  display: flex;
  padding: 16px;
  margin-bottom: 12px;
}

.doctor-avatar {
  width: 64px;
  height: 64px;
  border-radius: 32px;
  margin-right: 16px;
}

.doctor-info {
  flex: 1;
}

.doctor-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 4px;
}

.doctor-name {
  font-size: 18px;
  font-weight: 500;
}

.doctor-rating {
  display: flex;
  align-items: center;
}

.rating-star {
  margin-right: 4px;
  color: var(--apple-warning);
}

.doctor-title {
  margin-bottom: 8px;
}

.doctor-tags {
  display: flex;
  margin-bottom: 8px;
}

.doctor-description {
  font-size: 14px;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 加载更多样式 */
.load-more {
  text-align: center;
  padding: 16px 0;
  color: var(--apple-primary);
  font-size: 14px;
}

/* 无数据提示样式 */
.empty-tip {
  text-align: center;
  padding: 32px 0;
  color: var(--apple-gray1);
  font-size: 14px;
}